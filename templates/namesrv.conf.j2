# Epoll 原生选择器可以提升 Netty 应用程序的性能和吞吐量
useEpollNativeSelector = true
# 开启顺序消息支持
orderMessageEnable = true
# 控制是否启用服务器端的池化字节缓冲区分配器
serverPooledByteBufAllocatorEnable = true
enableControllerInNamesrv = true
controllerDLegerGroup = {{ rmq_controller_group_name }}
controllerDLegerPeers = {{ rmp_peer_hosts }}
{% for hostname in rmq_namesrv_servers %}
{% if hostname == inventory_hostname %}
controllerDLegerSelfId = n{{ loop.index }}
{% endif %}
{% endfor %}
controllerStorePath = {{ store_dir }}
enableElectUncleanMaster = true
notifyBrokerRoleChanged = true


